<openerp>
    <data>
      <record id="consignment_order_view_tree" model="ir.ui.view">
          <field name="name">consignment.order tree</field>
          <field name="model">consignment.order</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="name"/>
                  <field name="partner_id"/>
                  <field name="date_order"/>
                  <field name="type_id"/>
                  <field name="pricelist_id"/>
                  <field name="warehouse_id"/>
                  <field name="amount_untaxed"/>
                  <field name="amount_tax"/>
                  <field name="amount_total"/>
                  <field name="state"/>
              </tree>
          </field>
      </record>

      <record id="consignment_order_view_form" model="ir.ui.view">
          <field name="name">consignment.order form</field>
          <field name="model">consignment.order</field>
          <field name="arch" type="xml">
              <form>
                  <header>
                      <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}" confirm="Confirm data. Are you sure?"/>
                      <button name="action_approve" type="object" string="Approved" class="oe_highlight" attrs="{'invisible':['|',('state','!=','confirm'),('approve_ok','=',False)]}" confirm="Approve data. Are you sure?"/>
                      <button name="action_open" type="object" string="Process" class="oe_highlight" attrs="{'invisible':['|',('state','!=','approve'),('open_ok','=',False)]}" confirm="Open data. Are you sure?"/>
                      <button name="action_done" type="object" string="Finish" class="oe_highlight" attrs="{'invisible':['|',('state','!=','open'),('done_ok','=',False)]}" confirm="Finish data. Are you sure?"/>
                      <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}" confirm="Cancel data. Are you sure?"/>
                      <button name="action_restart" type="object" string="Set to Draft" class="oe_highlight" attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}" confirm="Restart data. Are you sure?"/>
                      <field name="state" string="State" widget="statusbar" statusbar_visible="draft,confirm,approve,open,done"/>
                  </header>
                  <sheet>
                      <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                      </div>
                      <div class="oe_left" style="width: 500px;">
                          <div class="oe_title" style="width: 500px;">
                              <label for="name"/>
                              <h1>
                                  <field name="name"/>
                              </h1>
                          </div>
                      </div>
                      <group name="header_1" colspan="4" col="2">
                          <group name="header_1_1" colspan="1" col="2">
                              <field name="partner_id"/>
                              <field name="date_order"/>
                          </group>
                          <group name="header_1_2" colspan="1" col="2">
                              <field name="type_id"/>
                              <field name="pricelist_id"/>
                              <field name="warehouse_id"/>
                          </group>
                      </group>
                      <notebook>
                          <page name="order_detail" string="Detail Order">
                            <sheet>
<!--                            <field name="detail_ids" colspan="4" nolabel="1">  -->
                              <field name="detail_ids" colspan="1" col="2" nolabel="1">
                                <tree string="Order Detail">
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                    <field name="tax_subtotal"/>
                                </tree>
                                <form string="Order Detail">
                                  <group name="group_order_detail" colspan="2" col="2">
                                      <field name="product_id"/>
                                      <field name="price_unit"/>
                                      <field name="quantity"/>
                                      <field name="uom_id"/>
                                      <field name="tax_ids"/>
                                      <field name="price_subtotal"/>
                                      <field name="tax_subtotal"/>
                                  </group>
                                </form>
                              </field>
                              <group name="order total" class="oe_subtotal_footer oe_right">
                                <field name="amount_untaxed" string="Sub Total"/>
                                <field name="amount_tax" string="Tax"/>
                                <field name="amount_total" string = "Total" class="oe_subtotal_footer_separator"/>
                              </group>
                            </sheet>
                          </page>
                          <page name="note" string="Note">
                              <field name="note"/>
                          </page>
                          <page name="log" string="Log">
                              <group name="group_log_1" colspan="4" col="3">
                                  <field name="confirm_date" string="Confirm"/>
                                  <field name="confirm_user_id" nolabel="1"/>
                                  <field name="approve_date" string="Approve"/>
                                  <field name="approve_user_id" nolabel="1"/>
                                  <field name="open_date" string="Open"/>
                                  <field name="open_user_id" nolabel="1"/>
                                  <field name="done_date" string="Done"/>
                                  <field name="done_user_id" nolabel="1"/>
                                  <field name="cancel_date" string="Cancel"/>
                                  <field name="cancel_user_id" nolabel="1"/>
                                  <field name="restart_date" string="Restart"/>
                                  <field name="restart_user_id" nolabel="1"/>
                              </group>
                          </page>
                          <page name="policy" string="Policy" groups="base.group_system">
                              <group name="policy_1" colspan="4" col="2">
                                  <field name="confirm_ok"/>
                                  <field name="approve_ok"/>
                                  <field name="open_ok"/>
                                  <field name="done_ok"/>
                                  <field name="cancel_ok"/>
                                  <field name="restart_ok"/>
                              </group>
                          </page>
                      </notebook>
                  </sheet>
                  <!-- open chatter  -->
                  <div class="oe_chatter">
                      <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                      <field name="message_ids" widget="mail_thread"/>
                  </div>

              </form>
          </field>
      </record>

      <record id="consignment_order_view_search" model="ir.ui.view">
          <field name="name">consignment.order search</field>
          <field name="model">consignment.order</field>
          <field name="arch" type="xml">
              <search>
                  <field name="name"/>
                  <field name="partner_id"/>
                  <field name="warehouse_id"/>
                  <field name="type_id"/>
                  <field name="state"/>
                  <group name="grp_state" string="State">
                      <filter name="dom_draft" string="Draft" domain="[('state','=','draft')]"/>
                      <filter name="dom_confirm" string="Waiting for Approval" domain="[('state','=','confirm')]"/>
                      <filter name="dom_approve" string="Ready to Process" domain="[('state','=','approve')]"/>
                      <filter name="dom_open" string="In Progress" domain="[('state','=','open')]"/>
                      <filter name="dom_done" string="Done" domain="[('state','=','done')]"/>
                      <filter name="dom_cancel" string="Cancelled" domain="[('state','=','cancel')]"/>
                  </group>
                  <group name="grp_group" string="Group By..">
                      <filter name="grp_customer" string="Customer" context="{'group_by':'partner_id'}"/>
                      <filter name="grp_warehouse" string="Warehouse" context="{'group_by':'warehouse_id'}"/>
                      <filter name="grp_type" string="Type" context="{'group_by':'type_id'}"/>
                      <filter name="grp_state" string="State" context="{'group_by':'state'}"/>
                      <filter name="grp_date_order_year" string="Date Order by Year" context="{'group_by':'date_order:year'}"/>
                      <filter name="grp_date_order_month" string="Date Order by Month" context="{'group_by':'date_order:month'}"/>
                      <filter name="grp_date_order_week" string="Date Order by Week" context="{'group_by':'date_order:week'}"/>
                      <filter name="grp_date_order_day" string="Date Order by Day" context="{'group_by':'date_order:day'}"/>
                  </group>
              </search>
          </field>
      </record>

      <record id="consignment_order_action" model="ir.actions.act_window">
          <field name="name">Consignmet Order</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">consignment.order</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="search_view_id" ref="consignment_order_view_search"/>
          <field name="context">{'search_default_dom_draft':1,'search_default_dom_confirm':1,'search_default_dom_approve':1,'search_default_dom_open':1}</field>
      </record>

      <menuitem
          id="consignment_order_type_menu"
          name="Consignment Order"
          parent="consignment_order_menu"
          action="consignment_order_action"
          sequence="1"
      />

    </data>
</openerp>
